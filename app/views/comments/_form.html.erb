<%= form_for ([@article, @article.comments.build]), :html => {:class => "form-horizontal"} do |f| %>
	<fieldset>
		<legend>Leave a Comment</legend>
  	<div class="form-group">
    	<%= f.label :name, class: "col-md-1" %>
    	<div class="col-md-5">
    		<%= f.text_field :name, class: "form-control", placeholder: "(Required)" %>
   		</div>
    </div>
  	<div class="form-group">
    	<%= f.label :email, class: "col-md-1" %>
    	<div class="col-md-5">
    		<%= f.text_field :email, class: "form-control", placeholder: "(Optional)" %>
  		</div>
    </div>
    <div class="form-group">
    	<%= f.label :body, "Comment", class: "col-md-1" %>
    	<div class="col-md-10">
    		<%= f.text_area :body, class: "form-control", rows: "3", id: "textArea" %>
		  	<p>
		    	<%= f.submit 'Post Comment', class: "btn btn-primary comment-button" %>
		  	</p>
    	</div>
    </div>
  </fieldset>	
<% end %>
  