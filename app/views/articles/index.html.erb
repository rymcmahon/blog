<div class="row">
  <div class="col-md-8">
    <% @articles.order("created_at desc").each do |article| %>
      <h3><%= link_to markdown(article.title), article_path(article) %> </h3>
      <h5><%= article.created_at.strftime("%B %e, %Y") %></h5>
      <p><%= markdown(article.text.truncate(200, separator: ' ')) %></p>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">About Me</div>
      <div class="panel-body">
        I am a husband, dad, and a software engineer. When I'm not coding or blogging about it I love cooking with my wife, playing Legos with my son, and watching hockey or football.
      </div>
    </div>
    <div class="list-group">
      <li class="list-group-item active">Blog Categories</li>
      <% @categories.each do |category| %>
        <%= link_to category_path(:id => category.id), :class => "list-group-item" do %>
          <span class="badge">
            <%= @categories.find_by_name(category.name).articles.count %>
          </span>
          <%= category.name %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
      
       
