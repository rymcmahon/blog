<% if logged_in? && current_user.admin? %>
	<%= link_to 'Edit', edit_article_path(:id => @article.id ) %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Categories:</strong>
  <% @article.categories.each do |category| %>
  	<%= category.name %>
  <% end %>
</p>