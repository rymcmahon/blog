<main>
	<section id="blog-post" class="light-bg">
		<div class="container inner-top-sm inner-bottom classic-blog">
			<% if notice %>
			<div class="alert alert-dismissible alert-success">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<h4 class="notice"><%= notice %><h4>
				</div>
				<% end %>
				<% if alert %>
				<div class="alert alert-dismissible alert-danger">
					<button type="button" class="close" data-dismiss="alert">×</button>
					<h4 class="notice"><%= alert %></h4>
				</div>
			<% end %>
			<div class="row">
				<div class="col-md-9 inner-right-sm">
					<div class="sidemeta">
						<div class="post format-gallery">
							<div class="date-wrapper">
								<div class="date">
									<span class="day"><%= @article.created_at.strftime("%e") %></span>
									<span class="month"><%= @article.created_at.strftime("%b") %></span>
								</div><!-- /.date -->
							</div><!-- /.date-wrapper -->
							<div class="post-content">
								<h1 class="post-title"><%= markdown(@article.title) %></h1>
								<ul class="meta">
									<% a = [] %>
									<% @article.categories.each do |category| %>
										<% a << category.name %>
										<% end %>
										<li class="categories"><%= a.join(', ') %></li>
										<li class="comments"><i class="icon-comment-1"></i> <%= @number_of_comments %> Comments</li>
								</ul><!-- /.meta -->
								<p><%= markdown(@article.text) %></p>
							</div><!-- /.post-content -->
						</div><!-- /.post -->
						<div id="comments">
							<h2><%= @number_of_comments %> Comments</h2>
							<ol class="commentlist">
								<% @comments.each do |comment| %>
								<li class="comment">
									<div class="commentbody">
										<div class="author">
											<h3><%= comment.name %></h3>
											<div class="meta">
												<span class="date">Posted <%= time_ago_in_words(comment.created_at) %> ago</span>
											</div><!-- /.meta -->
										</div><!-- /.author -->
										<div class="message">
											<p><%= comment.body %></p>
										</div><!-- /.message -->
									</div><!-- /.commentbody -->
								</li><!-- /.comment -->
								<% end %>
							</ol><!-- /.commentlist -->
						</div><!-- /#comments -->
						<div class="comment-form-wrapper">
							<h2>Leave a Comment</h2>
							<%= form_for ([@article, @article.comments.build]), :html => {:class => "forms"} do |f| %>
								<div class="row">
									<div class="col-sm-6">
										<%= f.text_field :name, class: "form-control", placeholder: "(Required)" %>
									</div><!-- /.col -->
								</div><!-- /.row -->
								<div class="row">
									<div class="col-sm-6">
										<%= f.text_field :email, class: "form-control", placeholder: "Email (Required, but never published)" %>
									</div><!-- /.col -->
								</div><!-- /.row -->
								<%= f.invisible_captcha :subtitle %>
								<div class="row">
									<div class="col-sm-12">
										<%= f.text_area :body, class: "form-control", placeholder: "Enter your comment ..." %>
									</div><!-- /.col -->
								</div><!-- /.row -->
								<%= f.submit 'Post Comment', class: "btn btn-default btn-submit comment-form-button" %>
							<% end %>
							<div id="response"></div>
						</div><!-- /.comment-form-wrapper -->
					</div><!-- /.sidemeta -->
				</div><!-- /.col -->
				<aside class="col-md-3">
					<div class="sidebox widget">
						<h4>Categories</h4>
						<% @categories.each do |category| %>
							<%= link_to category_path(:id => category.id) do %>
							<ul class="circled">
								<li><%= category.name %></a></li>
							</ul><!-- /.circled -->
							<% end %>
						<% end %>
						  <%= link_to "Back to Homepage", {:controller => :pages, :action=> :home, :anchor => "top"}, class: "txt-btn" %>
					</div><!-- /.widget -->
				</aside>
			</div><!-- /.row -->
		</div><!-- /.container -->
	</section>
</main>